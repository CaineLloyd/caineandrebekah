{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"%RESOURCE_DIR%\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
      "source": "/example",
      "destination": "https://example-website.com",
      "type" : 301
      },
      {
        "source": "/example",
        "destination": "https://example-website.com",
        "type" : 301
      }
    ],
    "rewrites": [
      {
        "source": "/createPage",
        "function": "pageCreator"
      },
      {
        "source": "**",
        "function": "responder"
      },
      {
        "source": "/*",
        "function": "responder"
      },
      {
        "source": "/*/*",
        "function": "responder"
      },
      {
        "source": "/*/*/*",
        "function": "responder"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}

{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"%RESOURCE_DIR%\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ {
      "source": "/example",
      "destination": "https://example-website.com",
      "type" : 301
    }, {
      "source": "/example",
      "destination": "https://example-website.com",
      "type" : 301
    } ],
    "rewrites": [ {
      "source": "/about",
      "destination": "/about/about.html"
    }, {
      "source": "/blog",
      "destination": "/blog/blog.html"
    }, {
      "source": "/gallery",
      "destination": "/gallery/gallery.html"
    }, {
      "source": "/contact",
      "destination": "/contact/contact.html"
    }, {
      "source": "/app",
      "destination": "/app/app.html"
    }, {
      "source": "/* //THIS WOULD REDIRECT ALL URLS",
      "function": "server"
    }, {
      "source": "/router",
      "function": "router"
    } ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
